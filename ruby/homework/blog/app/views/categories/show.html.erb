<h1><%= @category.name %></h1>

<p><%= @category.description %></p>


<ul>
  <li><%= link_to "Edit", edit_category_path(@category) %></li>
  <li><%= link_to "Destroy", category_path(@category), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></li>
</ul>

<h3>Articles in this category:</h3>
<ul>
  <% @articles.each do |article| %>
    <li>
      <%= link_to article.title, article %> <!-- Link to the article's show page -->
    </li>
  <% end %>
</ul>
