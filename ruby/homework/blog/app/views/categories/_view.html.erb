<h1>Category</h1>

<ul>
  <% @categories.each do |category| %>
    <div id = "categories">
      <li id = "categoryName">
      <%= link_to category.name, category %>
      </li>
      <p><em><%= category.description %></em></p>
      <li>
      <%= category.name %> (Articles: <%= category.articles.count %>)
      </li>
    </div>
  <% end %>
</ul>